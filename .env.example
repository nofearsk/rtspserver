# RTSP to HLS Server Configuration
# Copy this file to .env and modify as needed

# Server settings
RTSP_HOST=0.0.0.0
RTSP_PORT=8000
RTSP_DEBUG=false

# Security - CHANGE THESE IN PRODUCTION!
# Generate secret: python -c "import secrets; print(secrets.token_hex(32))"
RTSP_SECRET_KEY=change-this-to-a-secure-random-string
RTSP_API_KEY=your-api-key-here

# Token settings
RTSP_TOKEN_EXPIRY_HOURS=24

# FFmpeg paths (usually auto-detected)
# RTSP_FFMPEG_PATH=/usr/bin/ffmpeg
# RTSP_FFPROBE_PATH=/usr/bin/ffprobe

# HLS settings
RTSP_HLS_TIME=2
RTSP_HLS_LIST_SIZE=5
RTSP_HLS_DELETE_SEGMENTS=true

# Stream defaults
RTSP_DEFAULT_MODE=on_demand
RTSP_KEEP_ALIVE_SECONDS=60
RTSP_STARTUP_TIMEOUT=15
RTSP_RECONNECT_DELAY=5
RTSP_MAX_RECONNECT_ATTEMPTS=3

# Smart mode settings
RTSP_SMART_IDLE_MINUTES=5

# Resource limits
RTSP_MAX_STREAMS=50
RTSP_SEGMENT_CLEANUP_INTERVAL=30
